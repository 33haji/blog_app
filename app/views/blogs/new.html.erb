<% provide(:title, 'Blog新規登録') %>
<div class="new">
  <h1>Blogを新規登録する</h1>
  
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for(@blog) do |f| %>
        <%= f.label :title, "タイトル"%>
        <%= f.text_field :title, class: 'form-control' %>
  
        <%= f.label :body, "本文"%>
        <%= f.text_area :body, class: 'form-control', size: "100x10" %>
  
        <%= f.submit "Blog作成", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>