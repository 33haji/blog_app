<%= form_for(@blog) do |f| %>
  <%= f.label :title, "タイトル"%>
  <%= f.text_field :title, class: 'form-control' %>

  <%= f.label :body, "本文"%>
  <%= f.text_area :body, class: 'form-control', size: "100x10" %>

  <%= f.submit "登録", class: "btn btn-primary" %>
  <%= link_to "戻る", blogs_path, class: "btn btn-default" %>
<% end %>